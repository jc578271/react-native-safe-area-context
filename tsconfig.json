{
  /* -- default -- */
  "compileOnSave": false,
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "pretty": true,
    "moduleResolution": "node",
    "target": "es5",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "jsx": "react",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "noEmitOnError": false,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "lib": [
      "dom",
      "dom.iterable",
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "esnext.asynciterable"
    ],
    "types": ["node"],

    /* -- your custom (required fields) -- */
    "typeRoots": ["node_modules/@types"],
    "tsBuildInfoFile": "lib/tsconfig.tsbuildinfo",
    "outDir": "./lib",
    "rootDir": "./src"
  },
  "include": [
    "src",
    ".eslintrc.js",
    "babel.config.js",
  ],
  "exclude": [
    "node_modules",
    "lib",
    "docs",
    "example",
    "FabricExample"
  ]
}
